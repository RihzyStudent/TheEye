{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r TheEyeWebUI/server/requirements.txt"
  },
  "deploy": {
    "startCommand": "cd TheEyeWebUI/server && gunicorn main:app --bind 0.0.0.0:$PORT --workers 1 --timeout 180 --max-requests 1000 --max-requests-jitter 50",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}

